<h1>Listing Todo Items</h1>
 
<%= link_to 'New Todo Item', new_item_path %> 
 
<table>
  <tr>
    <th>Item</th>
    <th>Text</th>
    <th colspan="3"></th>
    <th>Created At</th>
  </tr>
 
  <% @items.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.notes %></td>
      <td><%= link_to 'Show', item_path(item) %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Destroy', item_path(item), method: :delete %></td>
      <td><%= item.created_at.strftime("%Y-%m-%d %H-%M-%S") %></td>
    </tr>
  <% end %>
</table>  
<a href="/">Home </a>